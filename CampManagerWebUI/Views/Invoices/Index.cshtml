@model IEnumerable<CampManagerWebUI.Models.InvoiceViewModel>

@{
    ViewBag.Title = "Index";
}

<h2>Lista</h2>

<div>
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Worth)
        </dt>

        <dd>
            @Model.Sum(x => x.Worth)
        </dd>
    </dl>
</div>

<p>
    @Html.ActionLink("Utwórz nowy", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.SupplierName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Number)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DateDelivery)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DateIssue)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DateIntroduction)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PositionCount)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Worth)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.SupplierName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Number)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DateDelivery)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DateIssue)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DateIntroduction)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PositionCount)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Worth)
        </td>
        <td>
            @Html.ActionLink("Edycja", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Szczegóły", "Details", new { id=item.Id }) |
            @Html.ActionLink("Usuń", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
